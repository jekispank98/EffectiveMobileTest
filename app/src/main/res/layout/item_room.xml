<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.effectivemobiletest.presentation.views.SlideView
            android:id="@+id/room_photo_slider"
            android:layout_width="match_parent"
            android:layout_height="257dp" />

        <TextView
            android:id="@+id/room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            tools:text="Стандартный с видом на бассейн или сад"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/room_peculiriaties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_start" />

        <TextView
            android:id="@+id/bt_more_about_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rect_rounded_rating_shape"
            android:backgroundTint="@color/sky_blue"
            android:text="@string/MORE_DETAILED_ABOUT_NUMBER"
            android:textSize="16sp"
            android:textColor="@color/bright_blue"
            android:drawablePadding="12dp"
            app:drawableEndCompat="@drawable/ic_arrow_right_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/room_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:text="186 600 ₽" />

            <TextView
                android:id="@+id/price_room_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="16sp"
                tools:text="за 7 ночей с перелётом" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_choose_room"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/rect_rounded_button_shape"
            android:text="@string/CHOOSE_NUMBER"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>